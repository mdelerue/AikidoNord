<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_app"
    tools:context=".ProchainStage" >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"/>
    <TextView
        android:id="@+id/tv_tarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tarif"/>
    
    <TextView
        android:id="@+id/tv_salle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"/>
    
    <TextView
        android:id="@+id/tv_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_salle"/>
    
    <TextView 
		android:id="@+id/tv_animePar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_adresse"
        android:text="@string/animePar"/>
    
    <TextView 
		android:id="@+id/tv_animateurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_animePar"/>
    
    <TextView 
		android:id="@+id/tv_horairesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_animateurs"
        android:text="@string/horaires"/>
    
    <TextView 
		android:id="@+id/tv_horaires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_horairesLabel"/>
    
    <ImageView
        android:id="@+id/iv_affiche"
        android:layout_width="75dp"
    	android:layout_height="100dp"        
        android:layout_below="@id/tv_horaires" />
    
</RelativeLayout>